create_table <- function() {
  x <- rmultinom(1, 100, prob=c(0.2, 0.4, 0.3, 0.1))
  y <- rmultinom(1, 150, prob=c(0.1, 0.2, 0.4, 0.3))
  matrix(c(x, y), nrow = 4,
         dimnames = list(Index = c("1", "2", "3", "4"),
           Variable = c("x", "y")))
}
tabelle<-as.data.frame(create_table())
